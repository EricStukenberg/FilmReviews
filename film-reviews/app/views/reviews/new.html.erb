<h3><%= @film.title %> </h3>
<%= form_for @review do |f| %>
    <p hidden> <%= f.text_field :film_id, :value => @film.id, class: "small_text" %></p>
    <ul>
        <%=f.label "Review Title:"%> 
        <%=f.text_field :film_title%> <br> <br>
        <%=f.label "Content"%><br>
        <%=f.text_area :content, class: "large_text"%> <br><br>
        <%=f.label "Score:"%>
        <%=f.number_field :score, step: :any%>
    </ul>
    <%=f.submit%>
<% end %>